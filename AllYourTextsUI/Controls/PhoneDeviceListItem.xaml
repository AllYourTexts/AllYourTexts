<ListBoxItem
    x:Class="AllYourTextsUi.PhoneDeviceListItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ListBoxItem.Resources>
        <SolidColorBrush x:Key="{x:Static SystemColors.ControlBrushKey}">LightBlue</SolidColorBrush>
    </ListBoxItem.Resources>
    <DockPanel LastChildFill="False" MinWidth="290">
        <Label Name="phoneNameLabel" FontWeight="Bold" FontSize="16" FontFamily="Calibri" DockPanel.Dock="Left">Phone Name</Label>
        <TextBlock FontStyle="Italic" FontFamily="Calibri" VerticalAlignment="Center" DockPanel.Dock="Right" Margin="5">Last Sync: <TextBlock Name="syncDateTextBlock">1/1/2007</TextBlock></TextBlock>
    </DockPanel>
</ListBoxItem>
